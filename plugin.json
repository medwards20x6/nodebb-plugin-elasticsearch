{
    "id": "nodebb-plugin-elasticsearch",
    "name": "Plugin to index posts in ElasticSearch",
    "description": "Index posts to ElasticSearch Index nodebb",
    "url": "https://github.com/seti123/nodebb-plugin-elasticsearch",
    "library": "./index.js",
    "staticDir": "/static",
    "css": [
        "style.css"
    ],
    "hooks": [
        { "hook": "action:plugin.activate", "method": "pluginActivated" },
        { "hook": "filter:server.create_routes", "method": "addRoute", "callbacked": true },
        { "hook": "action:post.save", "method": "indexPost" }
    ]
}
